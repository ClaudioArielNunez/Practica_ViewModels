@model ViewModels.ViewModels.OfertaViewModel
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nueva Oferta:</h2>
<hr />
<form action="@Url.Action("Nuevo","Oferta")" method="post">

    <div class="mb-3">
        <label>Producto:</label>
        @*Importante el name del select*@
        <select name="Oferta.IdProducto" class="form-select">
            <option>Seleccione</option>
            @foreach (var producto in Model.Productos)
            {
                <option value="@producto.IdProducto">@producto.Nombre</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Proveedor:</label>
        <select name="Oferta.IdProveedor" class="form-select">
            <option>Seleccione</option>
            @foreach (var proveedor in Model.Proveedores)
            {
                <option value="@proveedor.IdProveedor">@proveedor.RazonSocial</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Fecha Inicio:</label>
        @Html.TextBoxFor(x => x.Oferta.FechaInicio, new { @class = "form-control", @type="date"})        
    </div>
    <div class="mb-3">
        <label>Fecha Fin:</label>
        @Html.TextBoxFor(x => x.Oferta.FechaFin, new { @class = "form-control", @type = "date" })
    </div>
    <div class="mb-3">
        <label>Porcentaje descuento:</label>
        @Html.TextBoxFor(x => x.Oferta.PorcentajeDescuento, new { @class = "form-control" })
    </div>
    <div class="mb-3 d-grid gap-2 col-3">
        <input type="submit" value="Guardar" class="btn btn-success" />
        <a href="@Url.Action("Index","Oferta")" class="btn btn-danger">Cancelar</a>
    </div>

</form>
